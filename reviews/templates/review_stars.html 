<script>
    function submitRating(rating) {
        if (rating >= 4) {
            window.location.href = "https://search.google.com/local/writereview?placeid={{ business.google_business_id }}";
        } else {
            window.location.href = "{% url 'feedback' %}";
        }
    }
</script>
